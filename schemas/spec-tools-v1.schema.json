{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/clarin-eric/clarin-resource-families/refs/heads/main/schemas/spec-v1.schema.json",
  "title": "JSON Schema for the CLARIN Resource Families",
  "type": "object",
  "items": null,
  "definitions": {},
  "required": [
    "Name",
    "URL",
    "Family",
    "Description",
    "Language",
    "Licence",
    "Functionality",
    "Platform",
    "Infrastructure",
    "Access",
    "Publication"
  ],
    "Name": {
      "$id": "#/properties/Name",
      "title": "Resource name",
      "type": "string"
    },
    "URL": {
      "$id": "#/properties/URL",
      "type": "string",
      "format": "uri",
      "title": "Link to the resource (PID preferred)",
      "examples": ["https://example.com"]
    },
  "properties": {
    "Family": {
      "$id": "#/properties/Family",
      "type": "string",
      "title": "Name of the Resource Family",
      "enum": [
        "Corpus query tools",
        "Named entity recognition",
        "Part-of-Speech Tagging and Lemmatisation",
        "Tools for Normalisation",
        "Tools for sentiment analysis and opinion mining"
      ]
    },
      "Description": {
      "$id": "#/properties/Description",
      "type": "string",
      "title": "Resource's description"
    },
    "Language": {
      "$id": "#/properties/Language",
      "type": "array",
      "title": "Languages that the tool can work with",
      "items": {
        "$id": "#/properties/languages/items",
        "type": "string",
        "title": "Language Identifier, ISO 693-3",
        "default": "eng",
        "examples": ["eng", "deu"],
        "pattern": "^(.{3})|(generic)$"
      },
    "Licence": {
      "$id": "#/properties/Licence",
      "type": ["array", "string", "null"],
      "title": "Resource's licence",
      "default": null
    },
    "Size": {
      "$id": "#/properties/Size",
      "type": ["array", "string", "null"],
      "title": "Size of the resource, multiple formats possible",
      "default": null
    },
    "Functionality": {
      "$id": "#/properties/Functionality",
      "type": ["array", "string", "null"],
      "title": "Functionality of this tool",
      "default": null
    },
    "Platform": {
      "$id": "#/properties/Functionality",
      "type": ["array", "string", "null"],
      "title": "Platforms this tool is available on",
      "default": null
    },
      "Infrastructure": {
      "$id": "#/properties/Infrastructure",
      "type": "string",
      "title": "Resource's description"
    },
    "Publication": {
      "$id": "#/properties/Publication",
      "type": "string",
      "format": "uri",
      "title": "Link to a publication about the resource (PID preferred)",
      "examples": ["https://example.com"]
    }
    }
  }
}
